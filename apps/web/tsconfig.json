{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // Performance optimizations
    "declaration": false,
    "noEmitOnError": false,
    "preserveWatchOutput": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/providers/*": [
        "./providers/*"
      ],
      "@/types/*": [
        "../../types/*"
      ],
      "@multi-platform-app/ui": [
        "../../packages/ui/src"
      ],
      "@multi-platform-app/core": [
        "../../packages/core/src"
      ],
      "@multi-platform-app/ai": [
        "../../packages/ai/src"
      ],
      "@luma/store": [
        "../../packages/store/src"
      ],
      "@multi-platform-app/store": [
        "../../packages/store/src"
      ],
      "@multi-platform-app/types": [
        "../../packages/types/src"
      ],
      "@multi-platform-app/config": [
        "../../packages/config/src"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
