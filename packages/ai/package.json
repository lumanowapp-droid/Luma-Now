{
  "name": "@multi-platform-app/ai",
  "version": "1.0.0",
  "description": "AI prompts, adapters, and safety rules for multi-platform application",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
