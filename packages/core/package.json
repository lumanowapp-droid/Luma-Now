    "clean": "rimraf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.25",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "rimraf": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "business-logic",
    "core-services",
    "multi-platform"
  ],
  "license": "MIT"
}