{
  "name": "@multi-platform-app/core",
  "version": "1.0.0",
  "description": "Business logic and core services for multi-platform application",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
